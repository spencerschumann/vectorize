{
    "nodeModulesDir": "auto",
    "tasks": {
        "dev": "deno run --allow-net --allow-read --watch browser-app/server.ts",
        "start": "deno run --allow-net --allow-read browser-app/server.ts",
        "cli": "deno run --allow-read --allow-write --allow-env --allow-run deno-app/cli.ts",
        "test": "deno test --allow-read --allow-write"
    },
    "imports": {
        "@std/http": "jsr:@std/http@^1.0.21",
        "@std/path": "jsr:@std/path@^1.1.2",
        "@std/assert": "jsr:@std/assert@^1.0.15",
        "@std/cli": "jsr:@std/cli@^1.0.23",
        "pdfjs-dist": "npm:pdfjs-dist@^5.4.394"
    },
    "compilerOptions": {
        "lib": [
            "deno.window",
            "dom",
            "dom.iterable",
            "webgpu"
        ],
        "strict": true,
        "noImplicitAny": true,
        "strictNullChecks": true
    },
    "exclude": [
        "node_modules"
    ]
}