{
    "nodeModulesDir": "auto",
    "tasks": {
        "build": "deno run -A npm:esbuild browser-app/main.ts --bundle --format=esm --outfile=browser-app/bundle.js --platform=browser",
        "build:watch": "deno run -A npm:esbuild browser-app/main.ts --bundle --format=esm --outfile=browser-app/bundle.js --platform=browser --watch",
        "dev": "deno task build:watch & deno run --allow-net --allow-read --allow-write --watch browser-app/server.ts",
        "start": "deno run --allow-net --allow-read browser-app/server.ts",
        "cli": "deno run --allow-read --allow-write --allow-env --allow-run --unstable-webgpu deno-app/cli.ts",
        "test": "deno test --allow-read --allow-write"
    },
    "imports": {
        "@std/http": "jsr:@std/http@^1.0.21",
        "@std/path": "jsr:@std/path@^1.1.2",
        "@std/assert": "jsr:@std/assert@^1.0.15",
        "@std/cli": "jsr:@std/cli@^1.0.23",
        "pdfjs-dist": "npm:pdfjs-dist@^5.4.394",
        "pngjs": "npm:pngjs@^7.0.0"
    },
    "compilerOptions": {
        "lib": [
            "deno.ns",
            "deno.unstable",
            "dom",
            "dom.iterable",
            "deno.webgpu"
        ],
        "strict": true,
        "noImplicitAny": true,
        "strictNullChecks": true
    },
    "exclude": [
        "node_modules",
        "**/@types/node/**"
    ]
}